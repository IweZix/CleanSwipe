{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tinder-files",
  "version": "0.1.0",
  "identifier": "com.luca.tinder-files",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tinder Files",
        "width": 400,
        "height": 720,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/Downloads/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["$HOME/Downloads/**"]
    }
  }
}
